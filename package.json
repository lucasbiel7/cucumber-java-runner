{
  "name": "cucumber-java-runner",
  "displayName": "Cucumber Java Runner",
  "description": "VS Code extension for running Cucumber Feature files in Java projects",
  "version": "1.0.5",
  "publisher": "lucasbiel7",
  "author": {
    "name": "lucasbiel7"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.93.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasbiel7/cucumber-java-runner.git"
  },
  "bugs": {
    "url": "https://github.com/lucasbiel7/cucumber-java-runner/issues"
  },
  "homepage": "https://github.com/lucasbiel7/cucumber-java-runner#readme",
  "categories": [
    "Testing",
    "Debuggers",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "cucumber",
    "java",
    "test",
    "bdd",
    "gherkin",
    "feature",
    "runner",
    "testing"
  ],
  "activationEvents": [
    "onLanguage:gherkin",
    "workspaceContains:**/*.feature"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cucumberJavaRunner.runFeature",
        "title": "Cucumber: Run Feature"
      },
      {
        "command": "cucumberJavaRunner.runScenario",
        "title": "Cucumber: Run Scenario"
      },
      {
        "command": "cucumberJavaRunner.runExample",
        "title": "Cucumber: Run Example"
      },
      {
        "command": "cucumberJavaRunner.debugFeature",
        "title": "Cucumber: Debug Feature"
      },
      {
        "command": "cucumberJavaRunner.debugScenario",
        "title": "Cucumber: Debug Scenario"
      },
      {
        "command": "cucumberJavaRunner.debugExample",
        "title": "Cucumber: Debug Example"
      },
      {
        "command": "cucumberJavaRunner.runFeatureCodeLens",
        "title": "‚ñ∂ Run Feature"
      },
      {
        "command": "cucumberJavaRunner.runScenarioCodeLens",
        "title": "‚ñ∂ Run Scenario"
      },
      {
        "command": "cucumberJavaRunner.runExampleCodeLens",
        "title": "‚ñ∂ Run Example"
      },
      {
        "command": "cucumberJavaRunner.debugFeatureCodeLens",
        "title": "üêõ Debug Feature"
      },
      {
        "command": "cucumberJavaRunner.debugScenarioCodeLens",
        "title": "üêõ Debug Scenario"
      },
      {
        "command": "cucumberJavaRunner.debugExampleCodeLens",
        "title": "üêõ Debug Example"
      },
      {
        "command": "cucumberJavaRunner.refreshTests",
        "title": "Refresh Cucumber Tests",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "cucumberJavaRunner.refreshTests",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaRunner.runFeature",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaRunner.runFeature",
          "group": "1_cucumber@1"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaRunner.runScenario",
          "group": "1_cucumber@2"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaRunner.runExample",
          "group": "1_cucumber@3"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaRunner.debugFeature",
          "group": "1_cucumber@4"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaRunner.debugScenario",
          "group": "1_cucumber@5"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaRunner.debugExample",
          "group": "1_cucumber@6"
        }
      ]
    },

    "configuration": {
      "title": "Cucumber Java Runner",
      "properties": {
        "cucumberJavaRunner.enableCodeLens": {
          "type": "boolean",
          "default": false,
          "description": "Enable CodeLens buttons (‚ñ∂ Run, üêõ Debug) in feature files. When disabled, use Test Explorer instead for a cleaner interface.",
          "order": 1
        },
        "cucumberJavaRunner.objectFactory": {
          "type": "string",
          "default": "",
          "description": "Custom Cucumber ObjectFactory class (e.g., for Spring, Guice, PicoContainer). Leave empty to use default.",
          "order": 2,
          "markdownDescription": "Custom Cucumber `ObjectFactory` class for dependency injection. Common values:\n- Spring: `cucumber.api.spring.SpringFactory`\n- Guice: `cucumber.api.guice.GuiceFactory`\n- PicoContainer: `cucumber.api.picocontainer.PicoFactory`"
        },
        "cucumberJavaRunner.showDetailedErrors": {
          "type": "boolean",
          "default": true,
          "description": "Show detailed error messages with stack traces in Test Explorer when scenarios fail.",
          "order": 3
        },
        "cucumberJavaRunner.autoCompileMaven": {
          "type": "boolean",
          "default": true,
          "description": "Automatically compile Maven projects before running tests (only when target directory is missing).",
          "order": 4
        },
        "cucumberJavaRunner.excludeBuildDirectories": {
          "type": "array",
          "default": [
            "target",
            "build",
            "out",
            "dist",
            "node_modules",
            ".git"
          ],
          "description": "Directories to exclude when discovering feature files to avoid duplicates.",
          "order": 5,
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "install-local": "npm run package && cursor --install-extension $(ls -t cucumber-java-runner-*.vsix | head -1)",
    "build-and-install": "npm run compile && npm run install-local"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "typescript": "^5.0.4",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1"
  }
}
